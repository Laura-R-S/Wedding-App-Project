<!--Defining the model -->
@model WeddinApp3.Models.ViewModels.LoginViewModel

<!-- Leveraging Bootstrap to create login form -->
<div class="container">
    <h2>Sign In</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">

                <!-- Form using tag helpers to call the Login Post method in Account Controller -->
                <form id="account" method="post" asp-action="Login" asp-controller="Account">

                    <h4>Use your registered email id and password to log in </h4>

                    <hr />
                     <!-- Validation tag helpers added to alert user -->
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="col-md-2" asp-for="Email"></label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2" asp-for="Password"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                   <!-- Rememeber Me? functionality temporarily disabled 
                    <div class="form-group">
                        <div class="col-md-10 offset-md-2 checkbox">
                            <label asp-for="RememberMe" class=" pr-4 pl-0">
                                <input asp-for="RememberMe" />
                            </label>
                            Remember me?
                        </div>
                    </div>-->

                    <div class="form-group">
                        <div class="col-md-10 offset-md-2">
                            <input type="submit" value="Log in" class="btn btn-success" />
                        </div>
                    </div>
                    <p class="col-md-10 offset-md-2">
                        <!-- Redirect to Register Action Method-->
                        <a asp-action="Register">Sign Up Here!</a>
                    </p>
                    <p class="col-md-10 offset-md-2">
                        <!-- Redirect to Register Action Method-->
                        <a asp-action="ForgotPassword">Forgot Password?</a>
                    </p>
                </form>
            </section>
        </div>
    </div>
</div>

@section scripts{
    <!--Utilising validation jQuery scripts in shared folder -->
    <partial name="_ValidationScriptsPartial" />

}